@model Tuple<IEnumerable<MovieStore.Models.Movie>,IEnumerable<MovieStore.Models.Movie>>

@{
    ViewBag.Title = "Index";
    var topRecent = Model.Item1;
    var topPopular = Model.Item2;
}

<h2> Home Page </h2>
<br />
<table class="table">
    <thead>
        Top 5 Box Office In Our Store
    </thead>
    <tr>
        <th>
            Title
        </th>
        <th>
            Length
        </th>
        <th>
            Price
        </th>
        <th>
            Amount
        </th>
        <th></th>
    </tr>

    @foreach (var item in topRecent)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Title, "showMovieDetails", new { id = item.MovieId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
        </tr>
    }
</table>
