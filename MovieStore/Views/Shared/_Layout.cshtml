<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Music Store Online</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/DropDown.css" rel="stylesheet" type="text/css" />

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">

    <script src="~/Scripts/modernizr-2.6.2.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
</head>

@{
    ViewBag.Title = "Index";
    var username = ViewBag.UserName != null;
    var lastvisit = (string)ViewBag.lastDate;
    var isadmin = ViewBag.IsAdmin != null && (bool)ViewBag.IsAdmin;

}
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="Home">Movies Store</a>
                </div>
                <ul class="nav navbar-nav">
                    <li><a href="Search"><span class="glyphicon glyphicon-search"></span> Search Movies</a></li>
                    @if (isadmin != null && @ViewBag.IsAdmin == true)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
                                Admin Tools <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="@Url.Action("ViewOrders", null, new { area = string.Empty, controller = "StoraManage" }, Request.Url.Scheme)">
                                        <span >Orders</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("MovieDetails", null, new { area = string.Empty, controller = "StoraManage" }, Request.Url.Scheme)">
                                        <span >Information</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("MovieStorage", null, new { area = string.Empty, controller = "StoraManage" }, Request.Url.Scheme)">
                                        <span >Storage</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("ShowClientDetails", null, new { area = string.Empty, controller = "StoraManage" }, Request.Url.Scheme)">
                                        <span >Clients</span>
                                    </a>
                                </li>
                            </ul>
                        </li>

                    }

                </ul>
                <div id="navbar" class="navbar-collapse collapse">
                    

                    <ul class="nav navbar-nav navbar-right">
                        @if (!username)
                        {
                            <li><a href="User"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                            <li><a href="Login"><span class="glyphicon glyphicon-user"></span> Login</a></li>
                        }
                        else
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
                                    Welcome @ViewBag.UserName <span class="caret"></span>
                                </a>
                               
                                <ul class="dropdown-menu">
                                    <li><a href="Carts"><span class="glyphicon glyphicon-shopping-cart"></span> Cart</a></li>
                                    <li><a href="OrderHistory"><span class="glyphicon glyphicon-time"></span> Order History</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="#"><span class="glyphicon glyphicon-log-out"></span> Log Out</a></li>
                                </ul>
                            </li>
                        }

                    </ul>
                    
                </div><!--/.nav-collapse -->
            </div>

    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Movie Store Online</p>
        </footer>
    </div>

    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
</body>
</html>