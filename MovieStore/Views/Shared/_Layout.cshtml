<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Music Store Online</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>

</head>

@{
    ViewBag.Title = "Index";
    var username = ViewBag.UserName != null;
    var lastvisit = (string)ViewBag.lastDate;
}
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="Home">Movies Store</a>
                </div>
                <ul class="nav navbar-nav">
                    <li><a href="Search"><span class="glyphicon glyphicon-search"></span> Search Movies</a></li>
                    <li>
                        <a href="@Url.Action("About", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">
                            <span class="glyphicon"> About</span>
                        </a>
                    </li>
                   
                </ul>
               
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        @if (!username)
                        {
                            <li><a href="User"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                            <li><a href="Login"><span class="glyphicon glyphicon-user"></span> Login</a></li>
                        }
                        else
                        {
                    

                            <li class="alert-success">Hello @ViewBag.UserName<br />Your last visit was at @ViewBag.lastDate</li>
                            <li><a href="@Url.Action("Logout", null, new { area = string.Empty, controller = "Login" }, Request.Url.Scheme)">
                                    <span class="glyphicon glyphicon-user"> Logout</span>
                            </a></li>
                            <li>
                                <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Carts" }, Request.Url.Scheme)">
                                    <span class="glyphicon"><img style="width:30px;height:30px;" src="/cartImage.jpg"></span>
                                </a>
                            </li>
                        }

                    </ul>
                </div><!--/.nav-collapse -->
            </div>

    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Movie Store Online</p>
        </footer>
    </div>

    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
</body>
</html>